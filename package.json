{
  "name": "@ps-maker/plugin-cli",
  "version": "0.1.6",
  "description": "Create and build Pixel Stories Maker plugins",
  "author": "PixelStoriesOrg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PixelStoriesOrg/ps-maker-plugin-cli.git"
  },
  "homepage": "https://github.com/PixelStoriesOrg/ps-maker-plugin-cli#readme",
  "bugs": {
    "url": "https://github.com/PixelStoriesOrg/ps-maker-plugin-cli/issues"
  },
  "keywords": [
    "pixel-stories",
    "ps-maker",
    "plugin",
    "cli",
    "scaffold",
    "template",
    "create",
    "build"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "ps-maker-plugin": "dist/index.js"
  },
  "type": "module",
